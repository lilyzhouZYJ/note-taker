<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="create-note content">
        <h1>Create a new note</h1>
        <form action="/notes" method="POST">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" placeholder="Give your note a title..." required>
            <label for="snippet">Snippet:</label>
            <input type="text" id="snippet" name="snippet" placeholder="What is this note about..." required>
            <label for="body">Body:</label>
            <textarea id="body" name="body" rows="15" placeholder="Jot down some notes!" required></textarea>
            <!-- <input type="checkbox" id="private" name="private" value="private">
            <label for="private">Make this note private</label><br> -->
            <label for="status">Status:</label>
            <select id="status" name="status">
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
            </select>
            <div>
                <button>Create!</button>
                <button><a href="/dashboard">Cancel</a></button>
            </div>
        </form>
    </div>
</body>
</html>